<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PromoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/font_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chương trình khuyến mãi"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:textColor="@color/font_color"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rvSP"
        android:layout_marginBottom="-6dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="180dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/color1"
            android:text="Thêm CTKM"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="180dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/color1"
            android:text="Dừng CTKM"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>