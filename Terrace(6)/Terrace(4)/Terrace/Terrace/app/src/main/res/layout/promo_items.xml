<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPromoName"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Tên khuyến mãi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promo_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm giá  " />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  %" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promo_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày hết hạn:" />

            <TextView
                android:id="@+id/tvEndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 31/10/2024" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="193dp"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnUsePromo"
            android:layout_width="58dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:src="@drawable/addicon"
            android:layout_marginRight="8dp" />

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@android:drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btnEditPromo"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:src="@drawable/update_icon" />
    </LinearLayout>

</LinearLayout>
